<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.HomeScreenActivity">

    <Button
        android:id="@+id/add_likes_btn"
        android:layout_width="@dimen/std_btn_width"
        android:layout_height="@dimen/std_btn_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="37dp"
        android:layout_marginEnd="158dp"
        android:text="@string/add_more_likes" />

    <ImageView
        android:id="@+id/iv_user_prof_pic"
        android:layout_width="@dimen/pic_width"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="23dp"
        android:src="@drawable/com_facebook_profile_picture_blank_square" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/add_likes_btn"
        android:layout_alignParentTop="true"
        android:layout_marginTop="40dp"
        android:text="@string/your_name"
        android:textSize="@dimen/name_text_size" />

    <TextView
        android:id="@+id/tv_user_hometown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/add_likes_btn"
        android:layout_alignParentTop="true"
        android:layout_marginTop="91dp"
        android:text="@string/your_hometown" />

    <TextView
        android:id="@+id/tv_games_played"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/add_likes_btn"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/tv_user_hometown"
        android:layout_marginTop="130dp"
        android:text="@string/num_games" />

    <Button
        android:id="@+id/play_game_btn"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/add_likes_btn"
        android:layout_marginStart="92dp"
        android:paddingHorizontal="@dimen/buttons_vertical_padding"
        android:text="@string/play_game_btn" />

    <TextView
        android:id="@+id/logout_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:padding="20dp"
        android:paddingHorizontal="@dimen/buttons_vertical_padding"
        android:text="@string/logout_btn"
        android:textColor="@color/convo_blue"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_three_likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="93dp"
        android:layout_marginTop="169dp" />
</RelativeLayout>