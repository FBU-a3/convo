<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AddInfoFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:text="@string/add_info_here"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/back_to_prof_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/back" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_likes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/et_new_like"
        android:clickable="true"
        android:paddingLeft="@dimen/rv_likes_padding"
        android:paddingTop="@dimen/rv_likes_padding" />

    <EditText
        android:id="@+id/et_new_like"
        android:layout_width="@dimen/new_like_width"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/add_like_btn"
        android:layout_alignParentStart="true"
        android:ems="10"
        android:hint="@string/add_new_like"
        android:inputType="textPersonName"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/add_like_btn"
        android:layout_width="@dimen/like_btn_width"
        android:layout_height="@dimen/like_btn_height"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="@dimen/like_btn_margin"
        android:layout_marginTop="@dimen/like_btn_margin"
        android:clickable="true"
        android:text="@string/add"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/like_btn_margin" />

</RelativeLayout>