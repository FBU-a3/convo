<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/std_margin">

    <TextView
        android:id="@+id/tv_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="@string/end_message"
        style="@style/HeaderFont" />

    <TextView
        android:id="@+id/tv_topics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/tv_end"
        android:layout_marginTop="@dimen/std_margin"
        android:text="@string/end_topics" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_topics"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/tv_topics"
        android:layout_above="@id/play_again_btn"
        android:layout_marginTop="@dimen/std_margin"
        android:layout_marginBottom="@dimen/std_margin"
        android:scrollbars="vertical"
        android:visibility="visible" />

    <Button
        android:id="@+id/play_again_btn"
        android:layout_height="@dimen/std_btn_height"
        android:layout_width="@dimen/mini_btn_width"
        android:layout_above="@id/home_btn"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/play_again"
        android:textAllCaps="false"
        style="@style/EmphasizedButton" />

    <Button
        android:id="@+id/home_btn"
        android:layout_height="@dimen/std_btn_height"
        android:layout_width="@dimen/mini_btn_width"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/std_margin"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/go_home" />
</RelativeLayout>