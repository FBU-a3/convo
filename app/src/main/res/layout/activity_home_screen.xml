<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.HomeScreenActivity">

    <Button
        android:id="@+id/add_likes_btn"
        android:layout_width="@dimen/std_btn_width"
        android:layout_height="@dimen/std_btn_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/add_likes_button_margin"
        android:text="@string/add_more_likes" />

    <ImageView
        android:id="@+id/iv_user_prof_pic"
        android:layout_width="@dimen/pic_width"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/prof_pic_top_margin"
        android:src="@drawable/com_facebook_profile_picture_blank_square" />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_user_prof_pic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/name_top_margin"
        android:text="@string/your_name"
        android:textSize="@dimen/name_text_size" />

    <TextView
        android:id="@+id/tv_user_hometown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_user_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/hometown_top_margin"
        android:text="@string/your_hometown" />

    <TextView
        android:id="@+id/tv_games_played"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_user_hometown"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/games_played_top_margin"
        android:text="@string/num_games" />

    <Button
        android:id="@+id/play_game_btn"
        android:layout_width="@dimen/std_btn_width"
        android:layout_height="@dimen/std_btn_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/play_game_btn_bottom_margin"
        android:paddingHorizontal="@dimen/buttons_vertical_padding"
        android:text="@string/play_game_btn" />

    <TextView
        android:id="@+id/logout_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:padding="@dimen/logout_padding"
        android:paddingHorizontal="@dimen/buttons_vertical_padding"
        android:text="@string/logout_btn"
        android:textColor="@color/convo_blue"
        android:textSize="@dimen/logout_text_size" />

    <TextView
        android:id="@+id/tv_three_likes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/three_likes_bottom_margin" />

    <TextView
        android:id="@+id/add_likes_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/add_likes_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/add_likes_message_margin"
        android:text="Add more custom likes below!" />

</RelativeLayout>