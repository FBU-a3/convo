<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_liked_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/std_margin"
        android:paddingBottom="@dimen/std_padding"
        android:paddingTop="@dimen/std_padding"
        app:srcCompat="@android:color/darker_gray" />

    <Button
        android:id="@+id/delete_like"
        android:layout_width="@dimen/delete_btn_width"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:text="@string/X"
        android:textSize="@dimen/text_size_delete_btn"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        style="@style/SecondaryButton" />
</RelativeLayout>